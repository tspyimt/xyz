<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"/>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="format-detection" content="telephone=no">
    <link rel="shortcut icon" href="/img/user/favicon.png">
    <title>ARTLOCK</title>
    <link href="/css/user/style.css" rel="stylesheet" type="text/css" title="login">
    <link href="/css/user/radio-style.css" rel="stylesheet" type="text/css">

    <!--	 <link href="css/d-board.css" rel="stylesheet" type="text/css">-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="/js/html5shiv.js"></script>
    <script src="/js/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <script type="text/javascript" src="/js/jquery-ui-1.10.4.custom.min.js"></script>
    <script type="text/javascript" src="/js/validate.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
    <script src="/js/classie.js" type="text/javascript"></script>

</head>
<body class="bg-gradiant">

<div class="outmain">
    <div class="outinn signpage">
        <div class="container">
            <div class="frmContent">
                <div class="row">
                    <div class="col-sm-5">
                        <h1 class="logo"><img src="/img/user/artlock-logo.png" alt=""/></h1>
                    </div>
                    <div class="col-sm-7 contents">
                        <div class="loader">&nbsp;</div>

                        <div class="complete-profile change-div"><!---->
                            <h2 class="secHeading"><span>Thank you. Your email address is now verified.
                                    Please complete your profile and Sign In.</span></h2>

                            <div class="sgForm">
                                <form id="form_signup">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="jointer">
                                                <label>Membership type</label>
                                                <select name="usertype" class="required">
                                                    <option value="artist">Artist</option>
                                                   <!-- <option value="artist representative">Artist Representative</option>
                                                    <option value="curator">Curator</option>-->
                                                    <option value="collector">Collector</option>
                                                    <!--<option value="art enthusiast">Art Enthusiast (ArtRent)</option>-->
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="text" placeholder="First Name"
                                           class="emailInp firstname sgInput required"
                                           name="firstname"/>
                                    <input type="text" placeholder="Last Name" class="passInp lastname sgInput required"
                                           name="lastname"/>
                                    <!--<input type="text" placeholder="Country" class="passInp country sgInput"
                                           name="country"/>-->
                                    <div class="jointer">
                                        <label>Country</label>
                                        <select data-label="Country" class="required country"
                                                id="country" name="country">
                                        </select>
                                    </div>


                                    <input type="text" placeholder="Zip" class="passInp zip sgInput required" name="zip"
                                           id="ZIP"/>
                                    <input type="hidden" name="_id" value='<%= _id %>'>
                                    <input type="button" value="SIGN IN" onClick="return profileValidate(this);"
                                           class="singButton submit btn_submit"/>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        if ($(window).width() > 767) {
            $('.logo').parent().addClass('movelogo');
            $('.logo').parent().animate({
                left: 0
            }, 500, function () {
                $('.loader').show();
                $('.frmContent .row').css('position', 'auto');
                $('.logo').parent().removeClass('movelogo');
                $('.logo').parent().removeAttr('right');
                $('.contents .complete-profile').fadeIn(500, function () {
                    $('.loader').hide();
                });
            });
        } else {
            $('.contents .complete-profile').fadeIn();
        }

        $('#ZIP').on('keypress', (function (e) {
            /*if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                return false;
            }*/
        }));
    });
</script>
<script src="/js/app.js"></script>
<script src="/js/country.js"></script>
<script language="javascript">
    populateCountries("country", "state");
</script>
</body>
</html>

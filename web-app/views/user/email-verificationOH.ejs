<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"/>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="format-detection" content="telephone=no">
    <link rel="shortcut icon" href="/img/user/favicon.png">
    <title>ARTLOCK</title>
    <link href="/css/user/style.css" rel="stylesheet" type="text/css" title="login">
    <link href="/css/user/radio-style.css" rel="stylesheet" type="text/css">

    <!--	 <link href="css/d-board.css" rel="stylesheet" type="text/css">-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="/js/html5shiv.js"></script>
    <script src="/js/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <script type="text/javascript" src="/js/jquery-ui-1.10.4.custom.min.js"></script>
    <script type="text/javascript" src="/js/validate.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
    <script src="/js/classie.js" type="text/javascript"></script>

</head>
<body class="bg-gradiant">

<div class="outmain">
    <div class="outinn signpage">
        <div class="container">
            <div class="frmContent">
                <div class="row">
                    <div class="col-sm-5">
                        <h1 class="logo"><img src="/img/user/artlock-logo.png" alt=""/></h1>
                    </div>
                    <div class="col-sm-7 contents">

                        <div class="dtl-block email-verification change-div">
                            <h2 class="secHeading mBot20">Email Verification</h2>

                            <p>You need to verify your email<br/>
                                <%= email %><br/>
                                before proceeding.</p>
                            <input type="hidden" name="_id" value="<%=_id%>" id="user_id"/>
                            <p class="mTB40"><a href="javascript:void(0)" onClick="return reSendVerification(this)" class="btNav">RE-SEND
                                    VERIFICATION</a></p>
                            <ul class="pointNav">
                                <li><a href="javascript:showDiv('changeemail',false);" class="rightPoint">Change
                                        email</a></li>
                                <li><a href="javascript:window.location.href = '/auth/logout';" class="rightPoint">Log
                                        out</a></li>
                            </ul>
                        </div>


                        <div class="changeemail change-div">
                            <h2 class="secHeading">Type in your new email address below.</h2>

                            <div class="sgForm">
                                <form id="frm_changeemail">
                                    <input type="text" placeholder="E-mail address" class="emailInp email"
                                           name="email"/>
                                    <input type="password" placeholder="Password" class="passInp password"
                                           name="password"/>
                                    <input type="submit" value="CHANGE EMAIL" onClick="return changeEmailValidate(this)"
                                           class="singButton btn_submit btn_change_email"/>
                                </form>
                                <ul class="pointNav">
                                    <li><a href="javascript:showDiv('email-verification',true)"
                                           class="leftPoint">Back</a></li>
                                </ul>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        if ($(window).width() > 767) {
            $('.logo').parent().addClass('movelogo');
            $('.logo').parent().animate({
                left: 0
            }, 500, function () {

                $('.frmContent .row').css('position', 'auto');
                $('.logo').parent().removeClass('movelogo');
                $('.logo').parent().removeAttr('right');
                $('.contents .email-verification').fadeIn(500, function () {
                    $('.loader').hide();
                });
            });
        } else {
            $('.contents .email-verification').fadeIn();
        }
    });
</script>
<script src="/js/app.js"></script>

</body>
</html>
